      parrafoPuntos = document.getElementById('puntos');
      parrafoPuntos.innerHTML=puntos;
      elejida = document.getElementById('elejida');
    }

    function comprobar(ev) {
      console.log(ev.target.src);
      if (ev.target.src == elejida.src) {
        puntos ++;
        parrafoPuntos.innerHTML=puntos;
