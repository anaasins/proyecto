{% extends 'base.html.twig' %}

{% block title %}
Pagina principal
{% endblock %}

{% block body %}
  <!-- Header-->
  <header class="bg-dark py-5">
      <div class="container px-5">
          <div class="row gx-5 align-items-center justify-content-center">
              <div class="col-lg-8 col-xl-7 col-xxl-6">
                  <div class="my-5 text-center text-xl-start">
                      <h1 class="display-5 fw-bolder text-white mb-2">¡Entrenemos la vista!</h1>
                      <p class="lead fw-normal text-white-50 mb-4">Crea y añade nuevos ejercicios visuales para ayudar a los demás.</p>
                      <p class="lead fw-normal text-white-50 mb-4">También... entrena tu vista mediante la colección de ejercicios disponibles.</p>
                      <div class="d-grid gap-3 d-sm-flex justify-content-sm-center justify-content-xl-start">
                          <a class="btn btn-primary btn-lg px-4 me-sm-3" href="#games">Entrenar</a>
                          <a class="btn btn-primary btn-lg px-4 me-sm-3" href="{{ path('newGame_page') }}">Crear ejercicio</a>
                          <a class="btn btn-outline-light btn-lg px-4" href="#features">Saber más</a>
                      </div>
                  </div>
              </div>
              <div class="col-xl-5 col-xxl-6 d-none d-xl-block text-center"><img class="img-fluid rounded-3 my-5" src="img/index_header.jpg" alt="Ordenador y gafas" /></div>
          </div>
      </div>
  </header>

  <!-- Features section-->
  <section class="py-5" id="features">
      <div class="container px-5 my-5">
          <div class="row gx-5">
              <div class="col-lg-4 mb-5 mb-lg-0"><h2 class="fw-bolder mb-0">¡Registrate y empieza hoy mismo!</h2></div>
              <div class="col-lg-8">
                  <div class="row gx-5 row-cols-1 row-cols-md-2">
                      <div class="col mb-5 h-100">
                          <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-eye-fill"></i></div>
                          <h2 class="h5">Entrenamientos</h2>
                          <p class="mb-0">Disponemos de una gran colección de entrenamientos dinamicos para acabar con la monotonia.</p>
                      </div>
                      <div class="col mb-5 h-100">
                          <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-clock-fill"></i></div>
                          <h2 class="h5">Disponibilidad</h2>
                          <p class="mb-0">Realizalos donde y cuando quieras, con total libertad de horarios.</p>
                      </div>
                      <div class="col mb-5 mb-md-0 h-100">
                          <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-plus-square-fill"></i></div>
                          <h2 class="h5">Participa</h2>
                          <p class="mb-0">Crea y añade nuevos ejercicios mediante nuestro formulario, para contribuir a la gran colección disponible.</p>
                      </div>
                      <div class="col h-100">
                          <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-graph-up"></i></div>
                          <h2 class="h5">Evolución</h2>
                          <p class="mb-0">Consulta tus gráficas de evolución facilmente desde tu perfil de usuario.</p>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </section>

  <!-- Games preview section-->
  <section class="py-5" id="games">
      <div class="container px-5 my-5">
          <div class="row gx-5 justify-content-center">
              <div class="col-lg-8 col-xl-6">
                  <div class="text-center">
                      <h2 class="fw-bolder">Nuestros ejercicios</h2>
                      <p class="lead fw-normal text-muted mb-5">Una pequeña selección de nuestros ejercicios disponibles:</p>
                      <p class="lead fw-normal text-muted mb-5"><a href="{{ path('games_page') }}">Ver más</a></p>

                  </div>
              </div>
          </div>
          <div class="row gx-5">
          {% for ejercicio in ejercicios %}
          <!--empieza tarjeta-->
              <div class="col-lg-4 mb-5">
                  <div class="card h-100 shadow border-0">
                      <img class="card-img-top" src="img/ejercicios/{{ejercicio.imagen}}" alt="Imagen portada ejercicio" />
                      <div class="card-body p-4">
                          <!--<a class="text-decoration-none link-dark stretched-link" href=""></a>-->
                          <h5 class="card-title mb-3">{{ejercicio.nombre}} - {{ejercicio.id}}</h5>
                          <p class="card-text mb-0">{{ejercicio.descripcion}}</p>
                      </div>
                      <div class="card-footer p-4 pt-0 bg-transparent border-top-0">
                          <div class="d-flex align-items-end justify-content-between">
                              <div class="d-flex align-items-center">
                                  <div class="small">
                                      <div class="fw-bold">{{ejercicio.autor.nombre}}</div>
                                      <div class="text-muted">{{ejercicio.fechaCreacion|date('d-m-Y')}}</div>
                                  </div>
                              </div>
                          </div>
                          <div class="d-grid"><a class="btn btn-primary" href="{{ path('entrenar_page', {id: ejercicio.id}) }}">Entrenar</a></div>
                      </div>
                  </div>
              </div>
            <!--Acaba tarjeta-->
          {% endfor %}
          </div>
      </div>
  </section>
{% endblock %}
