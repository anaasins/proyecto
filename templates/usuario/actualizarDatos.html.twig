{% extends 'base.html.twig' %}

{% block title %}Mis datos{% endblock %}

{% block body %}
<section class="py-5">
  <div class="container px-5">
    <!-- Contact form-->
      <div class="bg-light rounded-3 py-5 px-4 px-md-5 mb-5">
        <div class="text-center mb-5">
          <h1 class="fw-bolder">Hola {{ usuario.nombre }}:</h1>
          <p class="lead fw-normal text-muted mb-0">
            Aquí puedes actualizar tus datos personales, si deseas cambiar tu contraseña pulsa
            <a href="{{ path('app_changePass') }}">aquí.</a>
          </p>
        </div>
        <div class="row gx-5 justify-content-center">
          <div class="col-lg-8 col-xl-8">
            {{ form_start(updateForm) }}
                {{ form_row(updateForm.correo) }}
                {{ form_row(updateForm.nombre)}}
                {{ form_row(updateForm.apellidos) }}
                {{ form_row(updateForm.telefono, {
                    type: 'tel'
                }) }}
                {{ form_row(updateForm.fechaNacimiento, {
                    type: 'Date'
                }) }}
                <div class="d-grid"><button class="btn btn-primary btn-lg" id="submitButton" type="submit">Actualizar</button></div>
            {{ form_end(updateForm) }}
          </div>
        </div>
      </div>
    </div>
  </section>
{% endblock %}
