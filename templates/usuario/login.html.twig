{% extends 'base.html.twig' %}

{% block title %}
Iniciar sesión
{% endblock %}

{% block body %}

  <section class="py-5">
      <div class="container px-5">
          <!-- Contact form-->
          <div class="bg-light rounded-3 py-5 px-4 px-md-5 mb-5">
              <div class="text-center mb-5">
                  <h1 class="fw-bolder">Iniciar sesión</h1>
                  <p class="lead fw-normal text-muted mb-0">
                    ¿No estás registrado? Registrate pulsando
                    <a href="{{ path('app_register') }}">aquí.</a>
                  </p>

              </div>
              <div class="row gx-5 justify-content-center">
                  <div class="col-lg-8 col-xl-6">
                      <form action="{{ path('app_login') }}" method="post">
                          <!-- Name input-->
                          <div class="form-floating mb-3">
                              <input class="form-control" id="username" type="text" name="_username" value="{{ last_username }}"/>
                              <label for="email">Correo: </label>
                          </div>
                          <!-- Phone number input-->
                          <div class="form-floating mb-3">
                              <input class="form-control" id="password" type="password" name="_password"/>
                              <label for="password">Contraseña: </label>
                          </div>
                          <!-- Submit Button-->
                          <div class="d-grid"><button class="btn btn-primary btn-lg" id="submitButton" type="submit">Iniciar sesión</button></div>
                      </form>
                  </div>
              </div>
          </div>
  </section>

{% endblock %}
